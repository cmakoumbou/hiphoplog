$("<%=j render 'home/releases' %>").appendTo($("#releases"));
// Update pagination link
<% if @releases.last_page? %>
  $('#pagination').remove();
<% else %>
  $('#pagination')
    .html("<%=j link_to_next_page(@releases, 'Show More', :remote => true, class: 'btn btn-default btn-lg btn-block') %>");
<% end %>