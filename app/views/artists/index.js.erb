$("<%=j render @artists %>").appendTo($("#artists"));
// Update pagination link
<% if @artists.last_page? %>
  $('#pagination').remove();
<% else %>
  $('#pagination')
    .html("<%=j link_to_next_page(@artists, 'Show More', :remote => true, class: 'btn btn-default btn-lg btn-block') %>");
<% end %>